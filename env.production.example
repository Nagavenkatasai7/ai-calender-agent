# Production Environment Configuration
# Copy this to .env in production and fill in your actual values

# Application
NODE_ENV=production
PORT=3000

# Database (Use PostgreSQL or MySQL in production instead of SQLite)
DATABASE_URL=postgresql://username:password@hostname:port/database

# JWT and Session Secrets (Generate strong random strings)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/callback

# AI Services
OPENAI_API_KEY=your-openai-api-key
DEEPSEEK_API_KEY=your-deepseek-api-key
HUGGING_FACE_TOKEN=your-huggingface-token
COHERE_API_KEY=your-cohere-api-key-here

# Email Configuration (Required for notifications)
EMAIL_FROM=noreply@yourdomain.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-app-password

# Stripe Configuration (Required for subscriptions)
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Admin Configuration
ADMIN_SECRET_KEY=your-admin-secret-for-debugging-endpoints 