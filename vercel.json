{
  "version": 2,
  "builds": [
    {
      "src": "dist/app.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "10mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/dist/app.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "/dist/app.js"
    },
    {
      "src": "/app",
      "dest": "/dist/app.js"
    },
    {
      "src": "/settings",
      "dest": "/dist/app.js"
    },
    {
      "src": "/ai-voice",
      "dest": "/dist/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/app.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 